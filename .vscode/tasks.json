{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "./tools/build.sh debug",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Debug",
			"type": "shell",
			"command": "qemu-system-i386 -drive format=raw,file=${workspaceFolder}/bin/disk.img -m 2048M -daemonize -D qemu.log -d guest_errors -serial file:boot.log -s -S"
		}
	]
}