{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "./tools/build.sh debug",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build arch.x86.boot",
			"type": "shell",
			"command": "cd ${workspaceFolder}/src/arch/x86/boot/ && make",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Debug",
			"type": "shell",
			"command": "qemu-system-i386 -cdrom ${workspaceFolder}/bin/boot.iso -m 2048M -daemonize -D qemu.log -d guest_errors -serial file:boot.log -s -S"
		},
		{
			"label": "Debug for arch.x86.boot",
			"type": "shell",
			"command": "qemu-system-i386 -cdrom ${workspaceFolder}/src/arch/x86/boot/boot.iso -m 2048M -daemonize -D qemu.log -d guest_errors -serial file:boot.log -s -S"
		}
	]
}